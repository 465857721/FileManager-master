<?xml version="1.0" encoding="utf-8"?>

<com.jiepier.filemanager.widget.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_about_card">

    <ImageView
        android:id="@+id/iv_firstImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_prj"/>

    <RelativeLayout
        android:background="#88ffffff"
        android:layout_alignBottom="@id/iv_firstImageView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/tv_dir_name"
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</com.jiepier.filemanager.widget.SquareRelativeLayout>